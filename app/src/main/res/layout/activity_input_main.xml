<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputMain">

    <TextView
        android:gravity="center"
        android:text="@string/string_text"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <EditText
        android:id="@+id/moneyEditText"
        android:hint="@string/hint1_label"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="0dp" />
    <EditText
        android:id="@+id/timeEditText"
        android:hint="@string/hint2_label"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/message"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/sendButton"
        android:onClick="inputButton"
        android:hint="@string/button_label"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>
